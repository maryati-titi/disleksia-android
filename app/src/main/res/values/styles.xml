<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GameAbjad" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ff5ea2</item>
        <item name="colorPrimaryDark">#d04f85</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <style name="MenuGame" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffcfd5</item>
        <item name="colorPrimaryDark">#e55e74</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:textColorPrimary">#c6425b</item>
    </style>

    <style name="MenuUtama" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#fff5ab</item>
        <item name="colorPrimaryDark">#c0ab53</item>
        <item name="android:textColorPrimary">#968540</item>
    </style>

    <style name="MenuKuis" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#fbc02d</item>
        <item name="colorPrimaryDark">#e1a205</item>
        <item name="android:textColorPrimary">#FFFfff</item>
    </style>

    <style name="PerbaikanKata" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#cee6b3</item>
        <item name="colorPrimaryDark">#689F38</item>
        <item name="android:textColorPrimary">#558c26</item>
    </style>

    <style name="Kamus" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#8ac6d1</item>
        <item name="colorPrimaryDark">#66a2ac</item>
        <item name="android:textColorPrimary">#afecf7</item>
    </style>

    <style name="Bantuan" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#892953</item>
        <item name="colorPrimaryDark">#3b1223</item>
        <item name="android:textColorPrimary">#f3d8e4</item>
    </style>

    <style name="Tentang" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#7ecec3</item>
        <item name="colorPrimaryDark">#389488</item>
        <item name="android:textColorPrimary">#235c55</item>
    </style>

    <style name="Setting" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#a6a6a6</item>
        <item name="colorPrimaryDark">#737373</item>
        <item name="android:textColorPrimary">#ffffff</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ThemeMenu" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#b1b3b6</item>
        <item name="colorPrimaryDark">#9b9da1</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemePerbaikanKata" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#70a02c</item>
        <item name="colorPrimaryDark">#a0bd89</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="noTitleBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryHome</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FontStyle">
        <item name="android:textColor">#b1b3b6</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ButtonStyle1">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="CategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!--Theme for tab text-->
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tab_Default_color</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabBackground">@color/primary_color</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#ff6f00</item>
        <item name="colorControlActivated">#ffffff</item>
    </style>

</resources>